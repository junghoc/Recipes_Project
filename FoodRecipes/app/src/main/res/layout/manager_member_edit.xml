<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="회원정보"
        android:textSize="18dp"
        android:fontFamily="@font/nanumgothic"
        android:textColor="@color/white"
        android:background="@color/main02"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main01"
        android:layout_margin="6dp"/>

    <TableLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="68dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="IDX"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/idx_board"
                android:text=""
                android:gravity="left"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="ID"/>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="300dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/id_et"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:enabled="false"
                    android:text=""
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/id_btn"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:text="수정" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="PWD"/>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="300dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pwd_et"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/black" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="NAME"/>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="300dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/black" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="GENDER"/>

            <RadioGroup
                android:id="@+id/gender_group"
                android:layout_width="300dp"
                android:layout_marginLeft="3dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male_radio"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:text="male" />

                <RadioButton
                    android:id="@+id/female_radio"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:text="female" />
            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="BIRTH" />
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="300dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/writer_board"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/birth_btn"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:text="선택" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="PHONE"/>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="300dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:inputType="phone"
                    android:text=""
                    android:textColor="@color/black" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="EMAIL"/>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="300dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/email_et"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textColor="@color/black" />
            </LinearLayout>

        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="REGDATE"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/regdate_member"
                android:text=""
                android:gravity="left"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic" />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="STATUS"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/status_member"
                android:text=""
                android:gravity="left"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/pre_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="이전"/>


        <Button
            android:id="@+id/edit_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="수정"/>


    </LinearLayout>
</LinearLayout>