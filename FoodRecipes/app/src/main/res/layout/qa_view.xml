<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.notice.Qa_View"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="QA"
        android:textSize="18dp"
        android:fontFamily="@font/nanumgothic"
        android:textColor="@color/white"
        android:background="@color/main02"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main01"
        android:layout_margin="6dp"/>

    <TableLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="68dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="IDX"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/idx_qa"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="id"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/id_qa"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="TITLE"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/title_qa"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="225dp"
                android:gravity="center"
                android:text="CONTENT"/>
            <TextView
                android:layout_margin="3dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/content_qa"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="DATE"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/date_qa"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic"/>
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/pre_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="이전"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/move_btn_qa"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="게시글로"
            android:visibility="visible"/>
        <!--삭제되었을 경우 android:visibility="gone"-->

        <Button
            android:id="@+id/del_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text=""/><!--삭제 / 복구-->

    </LinearLayout>

</LinearLayout>