<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="ANSWER"
        android:textSize="18dp"
        android:fontFamily="@font/nanumgothic"
        android:textColor="@color/white"
        android:background="@color/main02"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main01"
        android:layout_margin="6dp"/>

    <TableLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="68dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="IDX"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/idx_board"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="68dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="Q_TITLE"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/name_tv"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="TITLE"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/title_board"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_margin="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#eeeeee">

        <TextView
            android:layout_margin="2dp"
            android:background="@color/main03"
            android:height="25dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=" CONTENT"
            android:fontFamily="@font/nanumgothicbold"
            android:textSize="16dp"
            android:layout_width="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_weight="1"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:lines="6"
            android:textSize="15dp"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            />

    </LinearLayout>

    <TableLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="68dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="DATE"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/date_board"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothic"/>
        </TableRow>
        <TableRow>

            <TextView
                android:layout_height="45dp"
                android:gravity="center"
                android:text="StATUS" />

            <TextView
                android:id="@+id/status_board"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/nanumgothic"
                android:text=""
                android:textColor="@color/black" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/pre_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="이전"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/move_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="삭제"
            android:visibility="visible"/>

        <Button
            android:id="@+id/del_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="답변"/><!--답변하기 / 답변확인-->

    </LinearLayout>


</LinearLayout>